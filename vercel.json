{
  "version": 2,
  "name": "pudge-wars",
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/client/(.*)",
      "dest": "client/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js"
    }
  ]
}
